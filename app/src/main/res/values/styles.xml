<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="actionMenuTextColor">@color/blackLight</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:editTextColor">@color/blackLight</item>
        <item name="android:textColorPrimary">@color/blackLight</item>
        <item name="android:textColorSecondary">@color/blackLight</item>
        <item name="android:textColorTertiary">@color/blackLight</item>
        <item name="android:textColorPrimaryInverse">@color/blackLight</item>
        <item name="android:textColorSecondaryInverse">@color/blackLight</item>
        <item name="android:textColorTertiaryInverse">@color/blackLight</item>


    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/blackLight</item>
        <item name="colorAccent">@color/blackLight</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="colorPrimary">@color/blackLight</item>
        <item name="colorPrimaryDark">@color/blackLight</item>
        <item name="colorAccent">@color/blackLight</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:textColorPrimary">@color/blackLight</item>
        <item name="android:actionMenuTextColor">@color/blackLight</item>
    </style>

</resources>
