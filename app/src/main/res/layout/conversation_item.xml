<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/conversation_item_left"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                app:cardElevation="5dp"
                android:id="@+id/conversation_item_left_thumb_cv"
                android:layout_alignBottom="@+id/conversation_item_left_text_cv"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/conversation_item_left_thumb_iv"
                    android:src="@drawable/male_1"
                    android:textSize="20sp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/conversation_item_left_thumb_cv"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_margin="5dp"
                android:id="@+id/conversation_item_left_text_cv"
                android:layout_toEndOf="@+id/conversation_item_left_thumb_cv">
                <beautifiers.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/conversation_item_left_text_tv"
                    android:text="(On phone) Hello, who is this?, 나어ㅜㄹ아너ㅜㄴ아러ㅜㄴ아ㅓㅜㄴㅇ러ㅜ나어루ㅏ너ㅜ라너ㅜ라너ㅜ라ㅓㅜ나ㅓ우라너ㄹㅜㄹ나ㅓㅜ라너우라ㅓ누라ㅓ누아ㅓ루나ㅓ울나ㅓ우라너아러ㅜ나ㅓ루나ㅓㅜ너ㅜ어ㅏ너ㅜㄹ"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/conversation_item_right"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="100dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/conversation_item_right_thumb_cv"
                android:layout_alignBottom="@+id/conversation_item_right_text_cv"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="B"
                    android:gravity="center"
                    android:id="@+id/conversation_item_right_thumb_iv"
                    android:textSize="20sp"
                    android:src="@drawable/female_1"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/conversation_item_right_text_cv"
                android:layout_toLeftOf="@+id/conversation_item_right_thumb_cv"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                android:layout_toStartOf="@+id/conversation_item_right_thumb_cv">
                <beautifiers.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/conversation_item_right_text_tv"
                    android:text="(On phone) Hello, who is this? I dont kow who wthe whell are you whith home are you talkinh"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>