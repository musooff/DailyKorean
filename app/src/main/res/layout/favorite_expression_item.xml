<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            app:cardElevation="5dp"
            android:id="@+id/fav_exp_thumb_cv"
            android:layout_marginStart="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/fav_exp__thumb_iv"
                android:src="@drawable/male_1"
                android:textSize="20sp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fav_exp_thumb_cv"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/fav_exp_thumb_cv">
            <beautifiers.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_exp_kor"/>

            <beautifiers.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fav_exp_eng"/>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_check_circle_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:id="@+id/favorite_item_selected"/>
    </RelativeLayout>

</LinearLayout>